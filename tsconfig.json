{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}

